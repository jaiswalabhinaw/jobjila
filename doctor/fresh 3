  <script>
    // Menu toggle + close on link click
    const menuToggle = document.getElementById('menuToggle');
    const mainNav = document.getElementById('mainNav');
    menuToggle.addEventListener('click', ()=> mainNav.classList.toggle('active'));
    mainNav.querySelectorAll('a').forEach(a=>{
      a.addEventListener('click', ()=> { if(window.innerWidth <= 768) mainNav.classList.remove('active') });
    });

    // Basic form handlers (non-server demo)
    document.getElementById('appointmentForm').addEventListener('submit', e=>{
      e.preventDefault();
      alert('Appointment request received. We will contact you soon.');
      e.target.reset();
    });

    document.getElementById('aiForm').addEventListener('submit', e=>{
      e.preventDefault();
      const val = document.getElementById('symptom-select').value;
      const out = document.getElementById('ai-result');
      if(!val){ out.textContent = 'Please select a symptom.'; return; }
      // demo mapping
      const map = {
        blurry:'Blurry vision may indicate refractive error or cataract — consult an eye doctor.',
        pain:'Eye pain can be serious. Seek medical attention if severe.',
        dry:'Dry eyes are common; try artificial tears and reduce screen time.',
        floaters:'Floaters sometimes are normal but sudden increase needs urgent check.'
      };
      out.textContent = map[val] || 'Please consult an eye care specialist for accurate diagnosis.';
    });

    document.getElementById('symptomForm').addEventListener('submit', e=>{
      e.preventDefault();
      const checked = Array.from(e.target.querySelectorAll('input[name="symptom"]:checked')).map(i=>i.value);
      const res = document.getElementById('symptom-result');
      if(!checked.length) res.textContent = 'No symptoms selected.';
      else res.textContent = 'Selected: ' + checked.join(', ') + '. Please consult a specialist for guidance.';
    });

    document.getElementById('contactForm').addEventListener('submit', e=>{
      e.preventDefault();
      alert('Message sent. We will respond to your email soon.');
      e.target.reset();
    });
  </script>
