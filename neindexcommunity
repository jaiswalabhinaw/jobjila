<script>
function toggleNav(){
  const nav=document.getElementById('mainNav');
  if(nav.style.display==="flex"){nav.style.display="none";}
  else{nav.style.display="flex";nav.style.flexDirection="column";nav.style.alignItems="center";}
}
// Avatar demo
const names=["Anita","Rahul","Priya","Sahil","Maya","Ravi"];
const wall=document.getElementById('communityWall');
names.forEach(n=>{
  const d=document.createElement('div');
  d.className='avatar';
  d.textContent=n[0];
  d.title=n;
  wall.appendChild(d);
});
// Countdown
const target=new Date();target.setDate(target.getDate()+2);
function updateCountdown(){
  const diff=target-new Date();
  if(diff<=0){document.getElementById('countdown').textContent="Batch Closed";return;}
  const d=Math.floor(diff/(1000*60*60*24));
  const h=Math.floor((diff/(1000*60*60))%24);
  document.getElementById('countdown').textContent=`Batch Closing in ${d}d ${h}h`;
}
setInterval(updateCountdown,1000);updateCountdown();
</script>
